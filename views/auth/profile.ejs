<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #d4f7d4, #a3e4a3);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    .profile-box {
      background: white;
      padding: 30px;
      border-radius: 20px;
      box-shadow: 0px 4px 15px rgba(0, 128, 0, 0.2);
      width: 100%;
      max-width: 700px;
    }
    h1 {
      color: #2e7d32;
      font-weight: bold;
      margin-bottom: 15px;
    }
    h2 {
      color: #388e3c;
      margin-top: 25px;
    }
    .user-info {
      background: #f1f8f1;
      padding: 15px;
      border-radius: 12px;
      margin-bottom: 20px;
    }
    .drop-list {
      list-style: none;
      padding: 0;
    }
    .drop-list li {
      background: #e8f5e9;
      margin: 8px 0;
      padding: 12px;
      border-radius: 10px;
      border-left: 5px solid #2e7d32;
    }
    .no-drops {
      color: #777;
      font-style: italic;
    }
    .btn-buy {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="profile-box">
    <h1>Welcome, <%= user.name %></h1>

    <!-- User Info + Membership -->
    <div class="user-info">
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Membership:</strong> 
        <% if(user.isMember){ %>
          Active (expires on <%= user.membershipExpiry ? user.membershipExpiry.toLocaleDateString() : "N/A" %>)
        <% } else { %>
          Not Active
          <form action="/membership/buy" method="POST" style="display:inline;">
            <button class="btn btn-sm btn-success btn-buy">Buy Membership</button>
          </form>
        <% } %>
      </p>
    </div>

    <!-- Claimed Drops -->
    <h2>Claimed Drops</h2>
    <% if(claimedDrops.length === 0){ %>
      <p class="no-drops">You haven't claimed any drops yet.</p>
    <% } else { %>
      <ul class="drop-list">
        <% claimedDrops.forEach(claim => { %>
          <li>
            <strong><%= claim.drop.title %></strong><br>
            <%= claim.drop.description ? claim.drop.description : "" %><br>
            <% if(user.isMember){ %>
              Price: â‚¹<%= claim.drop.price %><br>
            <% } %>
            <small>Claimed at: <%= claim.claimedAt.toLocaleString() %></small>
          </li>
        <% }) %>
      </ul>
    <% } %>

    <!-- Logout -->
    <form action="/api/auth/logout" method="POST" class="mt-3">
      <button class="btn btn-danger">Logout</button>
    </form>
  </div>
</body>
</html>
