<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fruit Drops</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #d4f7d4, #a3e4a3);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
    }
    .navbar {
      background-color: #2e7d32;
      border-radius: 10px;
      padding: 12px 20px;
      margin-bottom: 25px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .navbar a {
      color: white;
      font-weight: 600;
      margin-left: 15px;
      text-decoration: none;
    }
    .navbar a:hover { text-decoration: underline; }
    h1 { color: #2e7d32; font-weight: bold; margin-bottom: 20px; text-align: center; }
    .carousel-item {
      background: white;
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0px 4px 12px rgba(0,128,0,0.2);
      text-align: center;
    }
    .carousel-item img {
      border-radius: 10px;
      max-width: 80%;
      margin: 10px auto;
    }
    .featured {
      background: gold;
      color: #333;
      font-size: 14px;
      font-weight: bold;
      padding: 2px 8px;
      border-radius: 8px;
    }
    .btn-claim {
      background-color: #2e7d32;
      color: white;
      border-radius: 10px;
      padding: 8px 16px;
      border: none;
      transition: 0.3s ease;
      margin-top: 10px;
    }
    .btn-claim:hover { background-color: #1b5e20; }
    .claimed { color: #2e7d32; font-weight: bold; margin-top: 10px; }
    .countdown { font-weight: bold; color: #e53935; margin: 8px 0; }
  </style>
</head>
<body>

<!-- Navbar -->
<div class="navbar">
  <div><a href="/">üçè Fruit Drops</a></div>
  <div><a href="/auth/profile">Profile</a> <a href="/auth/login">Logout</a></div>
</div>

<h1>Active Fruit Drops</h1>

<!-- Carousel -->
<div id="fruitDropsCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">

    <% drops.forEach((drop, index) => { %>
      <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
        <h2>
          <%= drop.title %>
          <% if(drop.featured){ %>
            <span class="featured">‚≠ê Featured</span>
          <% } %>
        </h2>
        <p><%= drop.description %></p>
        <% if(drop.image){ %>
          <img src="<%= drop.image %>" alt="Fruit Image">
        <% } %>

        <!-- Countdown -->
        <p class="countdown" id="countdown-<%= drop._id %>">Loading countdown...</p>

        <p><strong>Ends at:</strong> <%= drop.endTime.toLocaleString() %></p>

        <!-- View Details -->
        <a href="/drops/<%= drop._id %>" class="btn btn-outline-success btn-sm mb-2">üìÑ View Details</a><br>

        <!-- Claim Button -->
        <% if(!drop.claimedBy.includes(user._id)){ %>
          <form method="POST" action="/drops/<%= drop._id %>/claim">
            <button type="submit" class="btn-claim">Claim Drop</button>
          </form>
        <% } else { %>
          <p class="claimed">‚úÖ Claimed</p>
        <% } %>
      </div>
    <% }) %>

  </div>

  <!-- Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#fruitDropsCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#fruitDropsCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

<!-- JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Countdown JS -->
<% drops.forEach(drop => { %>
<script>
  (function() {
    const endTime = new Date("<%= drop.endTime.toISOString() %>").getTime();
    const countdownEl = document.getElementById("countdown-<%= drop._id %>");

    function updateCountdown() {
      const now = new Date().getTime();
      const distance = endTime - now;

      if (distance <= 0) {
        countdownEl.innerHTML = "‚è≥ Drop Ended";
        return;
      }

      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      countdownEl.innerHTML = `‚è≥ Time left: ${hours}h ${minutes}m ${seconds}s`;
    }

    updateCountdown();
    setInterval(updateCountdown, 1000);
  })();
</script>
<% }) %>

</body>
</html>
