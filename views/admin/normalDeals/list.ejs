<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - Normal Deals</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(120deg, #d0f0c0, #a8e6cf);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
    }

    h2 {
      color: #1b5e20;
      margin-bottom: 30px;
      text-align: center;
      font-weight: 700;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .btn-success {
      border-radius: 50px;
      background-color: #43a047;
      font-weight: 600;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
      transition: 0.3s;
    }

    .btn-success:hover {
      background-color: #388e3c;
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.3);
    }

    .table-container {
      display: grid;
      gap: 20px;
    }

    .deal-card {
      display: flex;
      flex-wrap: wrap;
      background: #ffffffdd;
      border-radius: 15px;
      padding: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      transition: transform 0.3s, box-shadow 0.3s;
      align-items: center;
    }

    .deal-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.15);
    }

    .deal-image img {
      border-radius: 12px;
      width: 100px;
      height: 60px;
      object-fit: cover;
      margin-right: 15px;
    }

    .deal-info {
      flex: 1;
    }

    .deal-title {
      font-weight: 700;
      font-size: 1.2rem;
      color: #2e7d32;
      margin-bottom: 5px;
    }

    .deal-description {
      font-size: 0.95rem;
      color: #4e7d57;
      margin-bottom: 5px;
    }

    .deal-price {
      font-weight: 700;
      color: #1b5e20;
      margin-right: 10px;
    }

    .badge-featured {
      background: linear-gradient(45deg, #ffeb3b, #cddc39);
      color: #1b5e20;
      font-weight: 700;
      padding: 5px 12px;
      border-radius: 50px;
      box-shadow: 0 0 8px #cddc39aa;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    .deal-actions i {
      margin-left: 15px;
      cursor: pointer;
      color: #2e7d32;
      transition: 0.3s;
    }

    .deal-actions i:hover {
      color: #1b5e20;
      transform: scale(1.2);
    }

    @media (max-width: 768px) {
      .deal-card {
        flex-direction: column;
        align-items: flex-start;
      }
      .deal-image img {
        margin-bottom: 10px;
      }
      .deal-actions {
        margin-top: 10px;
      }
    }
  </style>
</head>
<body class="container mt-5">

  <h2>Normal Deals</h2>
  <a href="/api/admin/normal-deals/create" class="btn btn-success mb-4">+ Create New Deal</a>

  <% if (normalDeals.length === 0) { %>
    <p class="text-center">No deals found.</p>
  <% } else { %>
    <div class="table-container">
      <% normalDeals.forEach(deal => { %>
        <div class="deal-card">
          <div class="deal-image">
            <% if (deal.image) { %>
              <img src="<%= deal.image %>" alt="Deal Image">
            <% } else { %>
              <img src="https://via.placeholder.com/100x60.png?text=No+Image" alt="No Image">
            <% } %>
          </div>
          <div class="deal-info">
            <div class="deal-title"><%= deal.title %></div>
            <div class="deal-description"><%= deal.description %></div>
            <div class="deal-price">â‚¹<%= deal.price %></div>
          </div>
          <div class="deal-badge">
            <% if (deal.featured) { %>
              <span class="badge-featured">Featured</span>
            <% } %>
          </div>
          <div class="deal-actions">
            <i class="fa-solid fa-pen-to-square" title="Edit"></i>
            <i class="fa-solid fa-trash" title="Delete"></i>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

</body>
</html>
