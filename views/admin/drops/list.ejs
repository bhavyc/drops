<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Drops</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #d0f0c0, #a8e6cf);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      min-height: 100vh;
    }

    .card {
      box-shadow: 0 6px 18px rgba(0,0,0,0.1);
      border-radius: 12px;
    }

    .table thead th {
      background-color: #2e7d32; /* Dark Green Header */
      color: white;
      border: none;
    }

    .table tbody tr:hover {
      background-color: #c8e6c9; /* Light Green Hover */
      transition: background 0.3s;
    }

    .btn-create {
      border-radius: 50px;
      padding: 0.5rem 1.5rem;
      font-weight: 600;
      background-color: #43a047; /* Green Button */
      color: white;
      transition: background 0.3s, transform 0.3s;
    }

    .btn-create:hover {
      background-color: #2e7d32; /* Darker Green */
      transform: translateY(-2px);
    }

    .badge-featured {
      background-color: #aed581; /* Light Green Badge */
      color: #1b5e20; /* Dark Green Text */
      font-weight: 500;
      padding: 0.4rem 0.8rem;
      border-radius: 50px;
    }

    h3 {
      color: #1b5e20;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3>All Drops</h3>
      <a href="/api/admin/drops/create" class="btn btn-create">Create New Drop</a>
    </div>

    <div class="card p-3">
      <table class="table table-hover align-middle mb-0">
        <thead>
          <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Start</th>
            <th>End</th>
            <th>Featured</th>
          </tr>
        </thead>
        <tbody>
          <% drops.forEach(drop => { %>
            <tr>
              <td><strong><%= drop.title %></strong></td>
              <td>â‚¹<%= drop.price.toFixed(2) %></td>
              <td><%= drop.startTime ? new Date(drop.startTime).toLocaleString() : 'N/A' %></td>
              <td><%= drop.endTime ? new Date(drop.endTime).toLocaleString() : 'N/A' %></td>
              <td>
                <% if(drop.featured) { %>
                  <span class="badge-featured">Yes</span>
                <% } else { %>
                  No
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
